CXX = mpic++
CC = mpicc

#CXXFLAGS := -O3 -g --debug -DVERBOSE -Wno-format-security -fopenmp
CXXFLAGS := -O3 -g -Wno-format-security -fopenmp
LDFLAGS += -fopenmp -lstdc++ -lm

FFTW_LIB := /usr/lib/x86_64-linux-gnu
